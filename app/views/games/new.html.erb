<h1>Alex not so serious game !</h1>


<div>
    <ul class="list-inline wrapper">
    <% @letters.each do |element| %>
        <li class="list-inline-item"><%= element %></li>
      <% end %>
    </ul>
  <form action="/score" method="post" class="pt 5">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <p>What is the longest word you can find ?</p>
    <input type="text" name="answer" placeholder="answer">
    <input type="submit" class="btn-primary rounded">
  </form>
</div>


